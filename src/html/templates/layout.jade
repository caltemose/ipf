include ./mixins

doctype html
html(lang="en")
    block pageVars

    head

        block title
        
        meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
        meta(content="width=device-width" name="viewport")

        link(href='https://fonts.googleapis.com/css?family=Droid+Sans+Mono|Playfair+Display:400italic' rel='stylesheet' type='text/css')
        link(href='/assets/css/plugins.css', rel='stylesheet' type='text/css')
        link(href='/assets/css/main.css', rel='stylesheet' type='text/css')

    body

        header#Header.Header.u-clear
        
            input#Trigger(type='checkbox' name='trigger')
            
            .u-clear.u-container
                label#TriggerLabel(for='Trigger') MENU
                img#Logo(src="/assets/img/ipf-logo-yellow-white.svg")
            
            #NavHeader.u-clear
                nav.NavPrimary.u-clear.u-container
                    each item in globals.nav
                        if item.title.toLowerCase() === selectedNav
                            a(href=item.href class="is-selected")= item.title
                        else
                            a(href=item.href class="")= item.title
                
                nav.NavSecondary.u-clear
                    each item in globals.utilities
                        if item.title.toLowerCase() === selectedNav
                            a(href=item.href class="is-selected")= item.title
                        else
                            a(href=item.href class="")= item.title
        

        main

            block contents


        footer.Footer
            .u-container
            
                .Footer-sponsors
                    a(href="#") sponsor1
                    a(href="#") sponsor2
                    a(href="#") sponsor3
                    a(href="#") sponsor4
                    a(href="#") sponsor5
            
                nav.Footer-nav
                    a(href="/contact-us" class="PipeNav") Contact Us
                    a(href="/terms-of-use" class="PipeNav") Terms of Use
                    a(href="/privacy-policy" class="PipeNav") Privacy Policy
                    a(href="/trademark" class="PipeNav") Trademark Use
                
                p.fineprint #{globals.copyright}

        script(src="/assets/js/plugins.js")
        block scripts
