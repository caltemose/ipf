extends templates/layout.jade

block pageVars
    - var selectedNav = 'home'

block title
    title The #{globals.ipf.date.year} #{globals.ipf.title}

block contents

    div.Banner-dates
        div Tour of Homes Preview: Friday April 28
        div Festival: Saturday April 29 &amp; Sunday April 30

    .Hero.owl-carousel.owl-theme
        div
            .HeroSlidePromo
                .HeroSlidePromo-banner

                .HeroSlidePromo-copy
                    h3 Festival Needs Volunteers!
                    p
                        | Festival doesn't happen without volunteers.
                        = ' '
                        a(href=globals.volunteerSite) Signup now
                        = ' '
                        | to volunteer your time and help make this year's festival great!
                    
                    a.u-blockCentered.Button(href=globals.volunteerSite) Sign Up

        div
            mixin slideImage('/assets/img/slideshows/parade-block-heros', 'Parade Block Heroes')

        div
            mixin slideImage('/assets/img/slideshows/parade-elvises', 'Parade Elvises')

        div
            mixin slideImageXL('/assets/img/slideshows/painting-face', 'Face painting in progress')
        
        div
            mixin slideImageXL('/assets/img/slideshows/homes-bighome', 'One of many beautfil homes in Inman Park')

    .u-container
    
        .PageIntro

            .PageIntro-header
                h1 Welcome to Atlanta's Favorite Street Festival
                
            .PageIntro-copy
                p During the last full weekend in April each year, Inman Park proudly presents a neighborhood festival widely regarded as Atlanta&rsquo;s most spirited and eclectic.
                p Please join us for the #{globals.ipf.date.annual}th Inman Park Spring Festival and Tour Of Homes.

    .PromotionItemHero.u-container.u-container--noPad
        .PromotionItemHero-image.image--art-2017

        .PromotionItemHero-text
            section
                h2 Artwork Chosen
                p 
                    a(href="/art/2017/") Read the interview with local artist Mindy Phan.
            .ArrowNav
                a(href="/art/2017/") >

    ul.PromotionGrid.u-container.u-container--noPad
        li.PromotionItem.alt-primary
            section
                h3 Join Our Volunteer Team Today.
                a.u-blockCentered.Button(href=globals.volunteerSite) Sign Up


        //- li.PromotionItem
        //-     section
        //-         h3 Tour of Homes
        //-         p
        //-             a(href="/events/tour-of-homes") Preview the homes on tour this year.
        //-     .ArrowNav
        //-         a(href="#") >

        //- Buy Tour Tickets Now
        //-
        li.PromotionItem
            section
                h3 Tour of Homes Tickets For Sale!
                p
                    a(href="/events/tour-of-homes#buy-tickets") Buy tickets on the Tour of Homes page
            .ArrowNav
                a(href="/events/tour-of-homes#buy-tickets") >


        li.PromotionItem.alt-secondary
            section
                h3 Follow Festival Online
                nav.social-icons
                    a(href="https://www.facebook.com/InmanParkFestival/" target="_blank") 
                        span.icon.-facebook
                            span.u-visuallyhidden Facebook
                    a(href="http://twitter.com/InmanParkFest" target="_blank") 
                        span.icon.-twitter
                            span.u-visuallyhidden Twitter: @inmanparkfest
                    a(href="https://www.instagram.com/inmanparkfest" target="_blank")
                        span.icon.-instagram
                            span.u-visuallyhidden Instagram: @inmanparkfest


