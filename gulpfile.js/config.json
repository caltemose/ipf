{
    "root": {
        "src": "./src",
        "dest": "./public"
    },

    "tasks": {
        "browserSync": {
            "server": {
                "baseDir": "public"
            }
        },

        "static": {
            "src": "assets/static",
            "dest": "assets/static/"
        },

        "js": {
            "src": "assets/js",
            "dest": "assets/js",
            "extractSharedJs": true,
            "entries": {
                "home": ["./pages/home.js"]
            },
            "extensions": ["js"]
        },

        "jsplugins": {
            "src": [
                "bower_components/jquery/jquery.min.js",
                "bower_components/OwlCarousel2/dist/owl.carousel.min.js"
            ],
            "file": "plugins.js",
            "dest": "./public/assets/js/"
        },

        "css": {
            "src": "assets/css",
            "dest": "assets/css",
            "autoprefixer": {
                "browsers": ["last 3 version"]
            },
            "sass": {
                "indentedSyntax": true
            },
            "extensions": ["sass", "scss", "css"]
        },

        "cssplugins": {
            "src": [
                "bower_components/OwlCarousel2/dist/assets/owl.carousel.min.css",
                "bower_components/OwlCarousel2/dist/assets/owl.theme.default.min.css"
            ],
            "file": "plugins.css",
            "dest": "./public/assets/css/"
        },

        "html": {
            "src": "html",
            "dest": "./",
            "dataFiles": {
                "globals": "./src/data/globals.json",
                "music": "./src/data/music.json"
            },
            "htmlmin": {
                "collapseWhitespace": true
            },
            "jade": {
                "pretty": true
            },
            "extensions": ["jade", "json"],
            "excludeFolders": ["templates"]
        },

        "images": {
            "src": "assets/img",
            "dest": "assets/img",
            "extensions": ["jpg", "png", "svg", "gif"]
        },

        "fonts": {
            "src": "assets/fonts",
            "dest": "assets/fonts",
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },

        "iconFont": {
            "src": "assets/icons",
            "dest": "assets/fonts",
            "sassDest": "generated",
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },

        "svgSprite": {
            "src": "assets/sprites",
            "dest": "assets/img",
            "extensions": ["svg"]
        }
    }
}
